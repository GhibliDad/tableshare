<!-- <div class="container"> -->
  <div class="banner_home">
    <div class="banner-info">
      <h1><strong>Share food.</strong></h1>
      <h1><strong>Share happiness.</strong></h1>
      <h1><strong>TableShare.</strong></h1>
    </div>
    <div class="search d-flex">
      <%= form_tag events_path, method: :get, class: 'form-inline', style: 'display:inline !important;' do %>
        <%= text_field_tag :address %>
        <%= date_field_tag :date1 %>
        <%= date_field_tag :date2 %>
        <%= submit_tag 'Search!', class: 'btn btn-warning' %>
      <% end %>
    </div>
  </div>
<!-- </div> -->

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h2 class="m-5" style="color:white">Tables near you!</h2>
    </div>
      <% @events.each do |event| %>
        <%= link_to event_path(event), {class: 'text-decoration-none'} do %>
          <div class="card-home p-3">
            <img src="https://source.unsplash.com/random?food">
            <div class="card-home-infos w-100">
              <div class="">
                <div class="">
                  <img src="https://source.unsplash.com/random?person" style="width:40px; height:40px;" class="card-home-user avatar-bordered" />
                </div>
                <div>
                  <h3 class="mt-2"><%= event.title %></h3>
                  <p><%= event.description %></p>
                  <p class="mt-3"><%= event.start_time %> time goes here</p>
                  <p class="ml-2"><%= event.user.email %></p>
                  <p><%= event.price %>SEK</p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
