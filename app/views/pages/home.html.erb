  <div class="banner_home">
    <div class="container">
      <div class="banner-info">
        <h1><strong>Share food.</strong></h1>
        <h1><strong>Share happiness.</strong></h1>
        <h1><strong>TableShare.</strong></h1>
      </div>
      <div class="search">
        <%= form_tag events_path, method: :get, class: 'form-inline', style: 'display:inline !important;' do %>
         <div class="search-inputs d-flex" style="border: none;">
          <%= text_field_tag :address %>
          <%= date_field_tag :date1 %>
