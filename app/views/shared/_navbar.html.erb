<div class="navbar navbar-expand-sm navbar-light navbar">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dkdk2tuol/image/upload/v1622726888/tableshare/logo_01_kd5ctr.png" %>
    <img src="https://res.cloudinary.com/dkdk2tuol/image/upload/v1622799243/tableshare/tableshare_logo_trnr1g.png" alt="" style="width:140px;">
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto list-inline">
      <% if user_signed_in? %>
        <li class="nav-item">
          <li class="list-inline-item mr-2"><%= link_to "Add a Table!", new_event_path, class: "nav-link btn btn-warning text-white" %></li>
          <% if current_user.first_name %>
            <%= link_to current_user.first_name, "#", class: "nav-link text-warning" %>
          <% else %>
            <%= link_to current_user.email, "#", class: "nav-link text-warning" %>
          <% end %>
        </li>
        <li class="nav-item dropdown pl-2">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, width: 40, height: 40, class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
           <%= image_tag "https://res.cloudinary.com/dxiatpprs/image/upload/v1622037671/Mask_Group_1_agdpry.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", "/dashboards/#{current_user.id}", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <% unless request.fullpath == "/users/sign_in" || request.fullpath == "/users/sign_up" %>
          <li class="nav-item mr-3"><%= link_to "Sign Up", new_user_registration_path, class: "nav-link btn btn-warning text-white" %></li>
          <li class="nav-item"><u><%= link_to "Sign In", new_user_session_path, class: "nav-link text-warning" %></u></li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
