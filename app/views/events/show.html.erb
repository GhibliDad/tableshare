<% if @event.photo.attached? %>
  <div class="img-fluid" style=" overflow: hidden; background-image:url('<%= cl_image_path(@event.photo.key) %>'); background-size: cover;">
    <h2 style="padding: 250px 100px 120px; font-size: 40px; font-weight: 700; text-shadow: 1px 1px rgba(200,200,200, 0.4)"><%= @event.title %></h2>
  </div>
<% else %>
  <div class="img-fluid" style=" overflow: hidden; background-image:url('https://res.cloudinary.com/dkdk2tuol/image/upload/v1622802286/tableshare/placeholder_pykjcu.jpg'); background-size: cover;">
    <h2 style="padding: 250px 100px 120px; font-size: 40px; font-weight: 700; text-shadow: 1px 1px rgba(200,200,200, 0.4)"><%= @event.title %></h2>
  </div>
<% end %>
<div class="container my-5">
  <div class="row">
    <div class="col-4">
      <div class="p-3 mr-3 border">
        <p><strong>Host:</strong> <%= @host.first_name %> (<%= @host.username %>) </p>
        <p><strong>Price:</strong> <%= @event.price %> SEK</p>
        <p><strong>Available seats: </strong> <%= @event.available_seats %></p>
        <p><strong>Time: </strong>
          <%= @event.start_time.to_formatted_s(:short) %> </p>
      </div>
    </div>
    <div class="col-8">
      <div class="row">
        <div class="col-12">
          <p><%= @event.description %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <p><strong>Adress: </strong> <%= @event.address %></p>
        </div>
        <div class="col-12">
          <p><strong>Ingredients:</strong>
            <%= @event.ingredients %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <button type="button" class="btn btn-outline-primary w-100 mt-4" data-toggle="modal" data-target="#exampleModal">
            Make a reservation
          </button>
        </div>
      </div>
      <div>
        <ul>
          <% @attendees.each do |attendee| %>
            <li>
              <% guest = attendee.user %>
              <p><%= guest.email %></p>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Extra information:</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for([@event, @reservation]) do |f| %>
        <%= f.input :message %>
        <%= f.submit 'Request reservation', class: 'btn btn-outline-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
