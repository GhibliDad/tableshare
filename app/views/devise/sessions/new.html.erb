<div class="form-container mb-5">
  <div class="row justify-content-center mt-5">
    <div class="col-5">
      <h2 class="mb-5 text-center text-warning"><strong>Welcome to TableShare!</strong></h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
            <div class="align-items-center">
              <ul class="list-inline d-flex justify-content-between">
                <li class="list-inline-item mt-2"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></li>
                <li><%= f.button :submit, "Log in", class: "btn btn-warning text-white" %></li>
              </ul>
              <div>
                <p class="text-center"><small><%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-warning" %></small></p>
                <p class="text-center"><u><%= link_to "No account? Sign Up!", new_user_registration_path, class: "text-dark" %></u></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
